{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "ADMIN_EMAIL": "@admin_email",
    "ADMIN_PASSWORD": "@admin_password", 
    "JWT_SECRET": "@jwt_secret",
    "SECRET_ACCESS_KEY": "@secret_access_key"
  }
} 